# Server
SERVER_PORT=8080

# Telegram Bot
# Get your bot token from @BotFather
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Admin
# Get your Telegram User ID from @userinfobot
ADMIN_USER_ID=your_telegram_user_id_here
ADMIN_ENABLE_NOTIFICATIONS=true
ADMIN_ENABLE_DAILY_DIGEST=false

# Database (для локального запуска через IDE)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/pikabu_bot
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Database (для Docker - используется в docker-compose.yml)
DB_NAME=pikabu_bot
DB_USER=pikabu_user
DB_PASSWORD=change_this_strong_password_here

# Application Settings
APP_MAX_CONCURRENT_DOWNLOADS=5
APP_RATE_LIMIT_MAX_REQUESTS=1000
APP_RATE_LIMIT_WINDOW_HOURS=1
APP_EXTERNAL_DOWNLOAD_TIMEOUT_MINUTES=10

# Pikabu Authentication (optional)
# For downloading videos available only to authorized users
# Use /update_auth command in bot to update cookies
PIKABU_AUTH_ENABLED=false
PIKABU_AUTH_COOKIES=

# Logging
# Levels: TRACE, DEBUG, INFO, WARN, ERROR, OFF
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO
LOGGING_LEVEL_PARSER=INFO
LOGGING_LEVEL_DOWNLOAD=INFO
LOGGING_LEVEL_QUEUE=INFO
LOGGING_FILE_PATH=./logs/pikabu-bot.log
LOGGING_MAX_FILE_SIZE=100MB
LOGGING_MAX_HISTORY=30
LOGGING_TOTAL_SIZE_CAP=3GB
