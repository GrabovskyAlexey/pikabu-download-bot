# Server
SERVER_PORT=8080

# Telegram Bot
# Get your bot token from @BotFather
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Admin
# Get your Telegram User ID from @userinfobot
ADMIN_USER_ID=your_telegram_user_id_here
ADMIN_ENABLE_NOTIFICATIONS=true
ADMIN_ENABLE_DAILY_DIGEST=false

# Database (для локального запуска через IDE)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/pikabu_bot
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Database (для Docker - используется в docker-compose.yml)
DB_NAME=pikabu_bot
DB_USER=pikabu_user
DB_PASSWORD=change_this_strong_password_here

# Application Settings
APP_MAX_CONCURRENT_DOWNLOADS=5
APP_RATE_LIMIT_MAX_REQUESTS=1000
APP_RATE_LIMIT_WINDOW_HOURS=1
